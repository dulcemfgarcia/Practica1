@using Classlibrary
@model AVL<Practica01.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1 class="black">Filtros de búsqueda</h1>

<form asp-action="BuscarNombre" method="post">
    <div class="input-group input-group-lg">
        <input type="type" name="name" value="" />
        <button class="btn btn-outline-dark black">Buscar nombre</button>
    </div>
</form>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                DPI
            </th>
            <th>
                Datebirth
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TreeList)
        {
            <tr>
                <td name ="username">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td name ="userdpi">
                    @Html.DisplayFor(modelItem => item.dpi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datebirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
            </tr>
        }
    </tbody>
</table>