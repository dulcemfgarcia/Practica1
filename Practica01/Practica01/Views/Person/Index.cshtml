@using Classlibrary
@model AVL<Practica01.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h4 class="black">Filtros de búsqueda</h4>

<form asp-action="SearchName" method="post">
    <div class="input-group input-group-lg">
        <input type="type" name="name" value="" />
        <button class="btn btn-outline-dark black">Buscar recluta</button>
    </div>
</form>

@if (Model.TreeList.Count != 0)
{

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    DPI
                </th>
                <th>
                    Datebirth
                </th>
                <th>
                    Address
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TreeList)
            {
            <tr>
                <td name="name">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td name="dpi">
                    @Html.DisplayFor(modelItem => item.dpi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datebirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { Persona = item.dpi, nombre = item.name})
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="text-align:center">
        <label>Aún no hay registros.</label>
        <br>
    </div>
}