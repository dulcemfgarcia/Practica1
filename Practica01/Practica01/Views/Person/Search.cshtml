@using Classlibrary
@model AVL<Practica01.Models.Person>

@{
    ViewData["Title"] = "BusquedaPlaca";
}

<h1>Resultados de la búsqueda por nombre y dpi</h1>


@if (Model.SearchTree.Count != 0)
{
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    Placa
                </th>
                <th>
                    Color
                </th>
                <th>
                    Propietario
                </th>
                <th>
                    Coordenadas
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SearchTree)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dpi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.datebirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="text-align:center">
        <label>No se algún registro con este nombre y dpi</label>
        <br>
    </div>
}
</div>
<div>
    <a asp-action="Index">Regresar al menú</a>
</div>