@using Classlibrary
@model AVL<Practica01.Models.Person>

@{
    ViewData["Title"] = "Search";
}

<h1>Resultados de la búsqueda por dpi</h1>


@if (Model.SearchTree.Count != 0)
{
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    DPI
                </th>
                <th>
                    Datebirth
                </th>
                <th>
                    Address
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SearchTree)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dpi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datebirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { Persona = item.dpi, nombre = item.name })
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="text-align:center">
        <label>No hay algún registro con este nombre</label>
        <br>
    </div>
}
<div>
    <a asp-action="Index">Regresar a la lista de reclutas</a>
</div>